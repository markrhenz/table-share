/* Header - Bulletproof Responsive Layout */
header {
  position: sticky;
  top: 0;
  background: #fff;
  border-bottom: 2px solid #000;
  padding: 10px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 10px;
  z-index: 1000;
  min-height: 52px; /* Consistent height */
}

[data-theme="dark"] header {
  background: #000;
  border-bottom-color: #fff;
}

/* Left side: Logo + Title */
.header-left {
  display: flex;
  align-items: center;
  gap: 12px;
  flex: 1;
  min-width: 0; /* Allow flex shrinking */
  overflow: hidden; /* Prevent overflow */
}

.header-logo {
  height: 32px;
  width: auto;
  flex-shrink: 0; /* Logo never shrinks */
  display: block;
}

[data-theme="dark"] .header-logo {
  filter: invert(1);
}

.header-title {
  margin: 0;
  font-size: 20px;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; /* Add ... if too long */
  flex: 1;
  min-width: 0;
}

/* Theme Toggle Button */
#themeToggle {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 6px 12px;
  border: 2px solid #000;
  background: #fff;
  cursor: pointer;
  font-size: 13px;
  white-space: nowrap;
  transition: all 0.2s ease;
  touch-action: manipulation;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
  flex-shrink: 0; /* Button never shrinks */
}

[data-theme="dark"] #themeToggle {
  background: #000;
  color: #fff;
  border-color: #fff;
}

#themeToggle:hover {
  opacity: 0.8;
}

#themeToggle:active {
  transform: scale(0.95);
}

.theme-icon {
  font-size: 14px;
  line-height: 1;
}

.theme-text {
  font-size: 13px;
}

/* Tablet (768px and below) */
@media (max-width: 768px) {
  header {
    padding: 8px 15px;
    min-height: 44px;
  }

  .header-left {
    gap: 10px;
  }

  .header-logo {
    height: 26px;
  }

  .header-title {
    font-size: 16px;
  }

  #themeToggle {
    padding: 5px 10px;
    gap: 5px;
  }

  .theme-icon {
    font-size: 13px;
  }

  .theme-text {
    font-size: 12px;
  }
}

/* Small Mobile (480px and below) */
@media (max-width: 480px) {
  header {
    padding: 6px 12px;
    min-height: 40px;
  }

  .header-left {
    gap: 8px;
  }

  .header-logo {
    height: 22px;
  }

  .header-title {
    font-size: 14px;
    max-width: 120px; /* Prevent pushing button off */
  }

  #themeToggle {
    padding: 4px 8px;
    gap: 4px;
    border-width: 1px;
  }

  .theme-icon {
    font-size: 12px;
  }

  .theme-text {
    font-size: 11px;
  }
}

/* Tiny Mobile (360px and below) */
@media (max-width: 360px) {
  header {
    padding: 5px 10px;
    min-height: 36px;
  }

  .header-logo {
    height: 20px;
  }

  .header-title {
    font-size: 12px;
    max-width: 80px; /* Force truncation */
  }

  #themeToggle {
    padding: 3px 6px;
    gap: 3px;
  }

  .theme-icon {
    font-size: 11px;
  }

  .theme-text {
    display: none; /* Hide "Dark"/"Light" text, icon only */
  }
}

